{
  "name": "@lyve/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "lint": "eslint ./apps/api/src/**/*.ts ./apps/media-server/src/**/*.ts",
    "api:lint": "eslint ./apps/api/src/**/*.ts",
    "ms:lint": "eslint ./apps/media-server/src/**/*.ts",
    "lint:fix": "eslint --fix --ext ./apps/api/src/**/*.ts ./apps/media-server/src/**/*.ts",
    "api:lint:fix": "eslint --fix --ext ./apps/api/src/**/*.ts",
    "ms:lint:fix": "eslint --fix --ext ./apps/media-server/src/**/*.ts",
    "format": "prettier --write ./**/*.{ts,js}",
    "api:format": "prettier --write ./apps/api/**/*",
    "ms:format": "prettier --write ./apps/media-server/**/*",
    "check:all": "prettier --check ./**/*.{ts,js}",
    "api:check": "prettier --check ./apps/api/**/*",
    "ms:check": "prettier --check ./apps/media-server/**/*",
    "docker:run": "docker-compose -f docker-compose.yml up",
    "prepare": "husky install"
  },
  "workspaces": [
    "./apps/api",
    "./apps/media-server"
  ],
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^7.3.0",
    "@typescript-eslint/parser": "^7.3.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-cypress": "^2.13.4",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "^28.3.0",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-security": "^3.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^2.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
