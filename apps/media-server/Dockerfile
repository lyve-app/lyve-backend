# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build media-server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t media-server`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system media-server && \
          adduser --system -G media-server media-server

COPY dist/apps/media-server media-server
RUN chown -R media-server:media-server .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix media-server --omit=dev -f install

CMD [ "node", "media-server" ]
